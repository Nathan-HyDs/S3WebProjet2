{% extends "layout.html.twig" %}



{% block contenu %}

	<h1> Projet 2 web : site de vente Espace client </h1>

	<div class="row">
		<div class="small-7 large-7 columns">
			<table>
				<caption>les produits + liens</caption>
				<thead>
				<tr><th>nom</th><th>id</th><th>type</th><th>prix</th><th>nom photo</th><th>photo</th><th>stock</th><th>commande</th>
				</tr>
				</thead>
				<tbody>
				{% for produit in data if data is not empty %}

					<tr>
						<td>{{produit.nom}}</td><td>{{produit.id}}</td><td>{{produit.libelle}}</td><td>{{produit.prix}}â‚¬</td><td>
							{{produit.photo}}</td><td>
							<img style="width:500px;height:100px;" src="{{asset('images/')}}{{produit.photo}}" alt="image de {{produit.libelle}}" >
						</td>
						<td>{{ produit.stock }}</td>
						<td>
							<div style="width: 50px;margin: 0px 0px 0px 15px;">
									<a style="width: 100px" href="{{ path('panier.insert', {id: produit.id}) }}"><img src="{{  asset('images/Logo-Panier.png') }}"></a>
							</div>
						</td>
					</tr>

				{% endfor %}
				<tbody>
			</table>
		</div>
		<div class="small-5 large-5 columns" style="left: 100px		">
			<table>
				<caption>le panier +liens</caption>
				<thead>
				<tr>
					<th>nom</th><th>image</th><th>quantite</th><th>prix</th>
				</tr>
				</thead>
				<tbody>
				{% for objetPanier in panier if panier is not empty %}
					<tr>
						<td>{{ objetPanier.nom }}</td>
						<td><img style="width:500px;height:100px;" src="{{asset('images/')}}{{objetPanier.photo}}" alt="image de {{objetPanier.nom}}" ></td>
						<td>{{ objetPanier.quantite }}</td><td>{{ objetPanier.prix }}</td>
					</tr>
				{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}